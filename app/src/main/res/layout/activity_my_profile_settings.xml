<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customColorPrimary1"
    tools:context=".MyProfileSettingsActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center|center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/default_background_type_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:fontFamily="@font/nanumsquarebold"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginLeft="8dp"
                android:text="김태현"
                android:textSize="20sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/user_mobile"
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="150dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:text="010.4343.8585"
                android:textSize="14sp"
                android:textColor="#b33e3e3e"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="32dp"
            android:contentDescription="@string/actionbar_prev_icon_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#fff7f7"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:src="@drawable/arrow_right_red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <LinearLayout
            android:id="@+id/menu_1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_color_selector1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_recommender"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1a3e3e3e" />

        <LinearLayout
            android:id="@+id/menu_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_color_selector1"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_notice"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/notice_copy_2"
                android:layout_marginRight="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1a3e3e3e" />

        <LinearLayout
            android:id="@+id/menu_3"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/button_color_selector1"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_card"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_notice"
                android:layout_marginRight="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorPrimary"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/menu_4"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_color_selector1"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_coupone"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/coupon_copy"
                android:layout_marginRight="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1a3e3e3e" />

        <LinearLayout
            android:id="@+id/menu_5"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_color_selector1"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_manage"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/car_copy"
                android:layout_marginRight="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1a3e3e3e" />

        <LinearLayout
            android:id="@+id/menu_6"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:background="@drawable/button_color_selector1"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/nanumsquareregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="@string/settings_set"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:letterSpacing="0.05" />

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/setting_copy"
                android:layout_marginRight="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_divider_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f2f2f2"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/setting_divider_1"
        tools:ignore="MissingConstraints">

        <TextView
            android:fontFamily="@font/nanumsquarebold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="고객센터"
            android:textSize="13sp"
            android:textColor="#3e3e3e"
            android:letterSpacing="0.05"/>

        <TextView
            android:fontFamily="@font/nanumsquareregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="서비스 관련 모든 문의는 고객센터를 이용해주세요."
            android:textSize="12sp"
            android:textColor="#b33e3e3e"
            android:letterSpacing="0.05" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/callcenter_btn"
                android:fontFamily="@font/nanumsquarebold"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/default_button_type_1"
                android:gravity="center|center_horizontal|center_vertical"
                android:shadowColor="#C4C4C4"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="7"
                android:text="@string/call_center"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- bottom navi -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        style="@style/BottomNavigationView"
        android:id="@+id/bottomNav_set"
        android:fontFamily="@font/nanumsquareregular"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="bottom"
        app:layout_behavior="com.sincar.customer.common.BottomNavigationViewBehavior"
        app:menu="@menu/bottom_navi"
        tools:ignore="MissingConstraints"
        app:layout_insetEdge="bottom"
        android:background="@drawable/default_background_type_3"
        app:itemBackground="@color/base_background_color"
        app:itemIconTint="@drawable/bottom_section_color"
        app:itemTextColor="@drawable/bottom_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>