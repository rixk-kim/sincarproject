<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/car_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/default_background_type_2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:gravity="left|center_horizontal|center_vertical">
                <TextView
                    android:id="@+id/car_column1"
                    android:fontFamily="@font/nanumsquareextrabold"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="포드"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:gravity="left|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/car_column2"
                    android:fontFamily="@font/nanumsquareregular"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="차량이름"
                    android:textColor="#3e3e3e"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="24dp"
                android:gravity="left|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/car_column3"
                    android:fontFamily="@font/nanumsquareregular"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_marginStart="16dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="차량번호"
                    android:textColor="#3e3e3e"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="right|center">

                <ImageView
                    android:id="@+id/car_delete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="24dp"
                    android:src="@drawable/close" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />
    <!--
        <View
            android:id="@+id/notice_list_item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333e3e3e" />
    -->
</LinearLayout>
