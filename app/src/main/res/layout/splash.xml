<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <!-- 내용 -->
    <LinearLayout
        android:id="@+id/splash_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_background_type_2"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="44dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/notice_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:text="신차로 이용 시 필요한 접근 권한 안내"
                    android:textColor="#3e3e3e"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:text="필수적 접근 권한"
                    android:textColor="#3e3e3e"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 전화 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="left|center_horizontal|center_vertical"
                        android:letterSpacing="0.05"
                        android:text="전화"
                        android:textColor="#3e3e3e"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="left|center_horizontal|center_vertical"
                        android:letterSpacing="0.05"
                        android:text="휴대폰 번호 인증"
                        android:textColor="#3e3e3e"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 위치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_location" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="left|center_horizontal|center_vertical"
                        android:letterSpacing="0.05"
                        android:text="위치"
                        android:textColor="#3e3e3e"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="left|center_horizontal|center_vertical"
                        android:letterSpacing="0.05"
                        android:text="출발지 및 목적지 설정"
                        android:textColor="#3e3e3e"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="left|center_horizontal|center_vertical"
                android:letterSpacing="0.05"
                android:text="선택적 접근 권한"
                android:textColor="#3e3e3e"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 알림 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bell_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:text="알림"
                    android:textColor="#3e3e3e"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:letterSpacing="0.05"
                    android:text="예약 완료 및 혜택 알림"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginTop="44dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="left|center_horizontal|center_vertical"
                android:lineSpacingExtra="5sp"
                android:text="선택적 접근권한은 기능 사용 시 허용이 필요하며, 비 허용시에도 해당 기능 외 서비스 이용이 가능합니다."
                android:textColor="#2a2a2a"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_linearLayout"
        app:layout_constraintVertical_bias="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/splash_btn"
            android:layout_width="280dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:background="@drawable/default_button_type_1"
            android:gravity="center|center_horizontal|center_vertical"
            android:shadowColor="#C4C4C4"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="@string/btn_confirm"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
