    <!-- 휴대폰 번호 입력 -->
    <LinearLayout
        android:id="@+id/layout_password1"
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/layout_background"
        android:elevation="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_activity">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/hint_phone_title"
            android:src="@drawable/phone" />

        <EditText
            android:id="@+id/user_id_et"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="@string/hint_phone_title"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="20"
            android:nextFocusDown="@+id/user_pwd_et"
            android:textColor="#3E3E3E"
            android:textSize="15sp"
            android:imeOptions="actionNext" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_password2"
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/layout_background"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_password1">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/lock_description"
            android:src="@drawable/lock" />

        <EditText
            android:id="@+id/user_pwd_et"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="@string/hint_password_title"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textColor="#3E3E3E"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:fontFamily="@font/nanumsquareregular"
        android:layout_width="280dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/default_button_type_1"
        android:shadowColor="#C4C4C4"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="7"
        android:text="@string/btn_confirm"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_password2" />

    <LinearLayout
        android:id="@+id/password_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginStart="104dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:fontFamily="@font/nanumsquareregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/password_search_msg"
            android:textSize="15sp"
            android:textColor="#3e3e3e"
            />
    </LinearLayout>
</LinearLayout>