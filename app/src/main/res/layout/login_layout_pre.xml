<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/customColorPrimary1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="173dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="142dp"
            android:layout_height="42dp"
            android:src="@drawable/login_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout02"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/nanumsquareextrabold"
            android:layout_gravity="center"
            android:gravity="center|center_horizontal|center_vertical"
            android:textColor="#3e3e3e"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/login_text1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearlayout03"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/login_text"
            android:fontFamily="@font/nanumsquareregular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/login_text2"
            android:textColor="#993e3e3e"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout04"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_btn"
            android:fontFamily="@font/nanumsquarebold"
            android:layout_width="248dp"
            android:layout_height="52dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/default_button_type_1"
            android:gravity="center|center_horizontal|center_vertical"
            android:shadowColor="#C4C4C4"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:text="@string/member_login"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout05"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/memberjoin_btn"
            android:fontFamily="@font/nanumsquarebold"
            android:layout_width="248dp"
            android:layout_height="52dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shadow_button_type_1"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/member_join"
            android:textColor="#3e3e3e"
            android:textSize="14sp" />

    </LinearLayout>

