<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_vertical"
        android:background="@drawable/default_background_type_2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="16dp"
            android:gravity="center">
            <TextView
                android:id="@+id/card_column1"
                android:layout_width="52dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:gravity="left|center_horizontal|center_vertical"
                android:text="BC카드"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="247dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_horizontal|center_vertical">

            <TextView
                android:id="@+id/card_column2"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="left|center_horizontal|center_vertical"
                android:text="카드번호"
                android:textColor="#3e3e3e"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:gravity="center"

            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/card_delete"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:src="@drawable/close" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/notice_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="16dp" />
<!--
    <View
        android:id="@+id/notice_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333e3e3e" />
-->
</LinearLayout>